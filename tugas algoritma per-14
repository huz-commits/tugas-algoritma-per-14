    {
      "cell_type": "code",
      "source": [
        "import os\n",
        "\n",
        "# File tempat menyimpan data\n",
        "DATA_FILE = 'sandal_data.txt'\n",
        "\n",
        "# Load data dari file\n",
        "def load_data():\n",
        "    data = []\n",
        "    if os.path.exists(DATA_FILE):\n",
        "        with open(DATA_FILE, 'r') as file:\n",
        "            for line in file:\n",
        "                kode, nama, stok, harga = line.strip().split(',')\n",
        "                data.append({\n",
        "                    'kode': kode,\n",
        "                    'nama': nama,\n",
        "                    'stok': int(stok),\n",
        "                    'harga': float(harga)\n",
        "                })\n",
        "    return data\n",
        "\n",
        "# Simpan data ke file\n",
        "def save_data(data):\n",
        "    with open(DATA_FILE, 'w') as file:\n",
        "        for barang in data:\n",
        "            file.write(f\"{barang['kode']},{barang['nama']},{barang['stok']},{barang['harga']}\\n\")\n",
        "\n",
        "# Tambah barang baru\n",
        "def tambah_barang(data):\n",
        "    kode = input(\"Kode sandal: \")\n",
        "    nama = input(\"Nama sandal: \")\n",
        "    stok = int(input(\"Stok awal: \"))\n",
        "    harga = float(input(\"Harga satuan: \"))\n",
        "    data.append({'kode': kode, 'nama': nama, 'stok': stok, 'harga': harga})\n",
        "    print(\"Barang berhasil ditambahkan!\")\n",
        "\n",
        "# Cari barang\n",
        "def cari_barang(data):\n",
        "    keyword = input(\"Masukkan nama atau kode sandal: \")\n",
        "    ditemukan = False\n",
        "    for barang in data:\n",
        "        if keyword.lower() in barang['nama'].lower() or keyword.lower() == barang['kode'].lower():\n",
        "            print(barang)\n",
        "            ditemukan = True\n",
        "    if not ditemukan:\n",
        "        print(\"Barang tidak ditemukan.\")\n",
        "\n",
        "# Update stok\n",
        "def update_stok(data):\n",
        "    kode = input(\"Masukkan kode sandal: \")\n",
        "    for barang in data:\n",
        "        if barang['kode'] == kode:\n",
        "            stok_baru = int(input(\"Masukkan stok baru: \"))\n",
        "            barang['stok'] = stok_baru\n",
        "            print(\"Stok berhasil diperbarui.\")\n",
        "            return\n",
        "    print(\"Barang tidak ditemukan.\")\n",
        "\n",
        "# Hapus barang\n",
        "def hapus_barang(data):\n",
        "    kode = input(\"Masukkan kode sandal yang akan dihapus: \")\n",
        "    for i, barang in enumerate(data):\n",
        "        if barang['kode'] == kode:\n",
        "            del data[i]\n",
        "            print(\"Barang berhasil dihapus.\")\n",
        "            return\n",
        "    print(\"Barang tidak ditemukan.\")\n",
        "\n",
        "# Laporan stok\n",
        "def laporan_stok(data):\n",
        "    if not data:\n",
        "        print(\"Data kosong.\")\n",
        "        return\n",
        "    print(\"Laporan Stok Sandal:\")\n",
        "    for barang in data:\n",
        "        print(f\"{barang['kode']} - {barang['nama']} | Stok: {barang['stok']} | Harga: {barang['harga']}\")\n",
        "\n",
        "# Menu utama\n",
        "def menu():\n",
        "    data = load_data()\n",
        "    while True:\n",
        "        print(\"\\n--- Sistem Inventori Toko Sandal ---\")\n",
        "        print(\"1. Tambah Barang\")\n",
        "        print(\"2. Cari Barang\")\n",
        "        print(\"3. Update Stok\")\n",
        "        print(\"4. Hapus Barang\")\n",
        "        print(\"5. Laporan Stok\")\n",
        "        print(\"6. Keluar\")\n",
        "        pilihan = input(\"Pilih menu (1-6): \")\n",
        "\n",
        "        if pilihan == '1':\n",
        "            tambah_barang(data)\n",
        "        elif pilihan == '2':\n",
        "            cari_barang(data)\n",
        "        elif pilihan == '3':\n",
        "            update_stok(data)\n",
        "        elif pilihan == '4':\n",
        "            hapus_barang(data)\n",
        "        elif pilihan == '5':\n",
        "            laporan_stok(data)\n",
        "        elif pilihan == '6':\n",
        "            save_data(data)\n",
        "            print(\"Data disimpan. Keluar dari program.\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"Pilihan tidak valid.\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    menu()\n"
      ],
